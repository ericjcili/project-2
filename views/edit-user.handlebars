<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Update My Information
  </h2>
  <form class="edit-user-form">
    <div>
      <label for="user-name">Username</label>
      <input autocomplete="off" name="user-name" type="text" value="{{user.username}}" />
    </div>
    <div>
      <label for="email">User Email</label>
      <input autocomplete="off" name="email" value="{{user.email}}" />
    </div>
     <div>
      <label for="password">Password</label>         
      <input autocomplete="off" type="password" name="password" />
    </div>
    <div>
      <input type="hidden" id="user-id" name="user-id" value={{user.id}} />
    </div>   
    <button type="submit">Update</button>
  </form>
</article>

<script src="/javascript/edit-user.js"></script>